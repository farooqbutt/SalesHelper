<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">Public Vendors List</h3>
        </div>
    </div>
    <div class="content-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-content collpase show">
                        <div class="card-body card-dashboard">
                            <table id="vendorsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Vendor Name</th>
                                        <th>Business Type</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Website</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    // Get Vendors List
    $(document).ready(function () {
        $('#vendorsTable').DataTable({
            "ajax": {
                "url": "/Vendors/VendorsList",
                "type": "GET",
                "dataType": "json",
                "dataSrc": "data"
            },
            "columns": [
                { "data": "vendorName" },
                { "data": "businessTypeIdFK.typeName" },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return `<a href="mailto:${data.email}">${data.email}</a>`;
                    }
                },
                { "data": "phone" },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return `<a href="https://${data.website}" target="_blank">${data.website}</a>`;
                    }
                },
                {
                    "data": null, // Placeholder for action buttons
                    "render": function (data, type, row) {
                        return `
                                <button type="button" class="btn btn-icon btn-pure success"
                                data-toggle="tooltip" onclick="AddToMyVendorsList(${data.vendorId})"
                                data-placement="top"
                                title="Add to My Vendors List">
                                <i class="feather icon-plus-circle"></i>
                                </button>
                                <button type="button" class="btn btn-icon btn-pure primary"
                                data-toggle="tooltip"
                                data-placement="top"
                                title="View Vendor Details">
                                <i class="feather icon-eye"></i>
                                </button>
                                `;
                    }
                }
            ],
            "columnDefs": [
                { "width": "20%", "targets": 0 },
                { "width": "15%", "targets": 1 },
                { "width": "15%", "targets": 2 },
                { "width": "10%", "targets": 3 },
                { "width": "20%", "targets": 4 },
                { "width": "20%", "targets": 5 }
            ]
        });
    });

    // Add Vendor to My Vendors List
    function AddToMyVendorsList(vendorId) {
        $.ajax({
            url: "/Vendors/AddToMyVendor",
            type: "POST",
            data: { vendorId: vendorId },
            success: function (data) {
                if (data.message=='success') {
                    toastr.success(data.result, 'Success!', { "progressBar": true });
                }
                else {
                    toastr.error(data.result, 'Error!', { "progressBar": true });
                }
            },
            error: function (data) {
                toastr.error(data, 'Error!', { "progressBar": true });
            }
        });
    }

</script>