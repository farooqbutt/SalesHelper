            error: function (error) {
                toastr.error(error, 'Error!', { "progressBar": true });
            }
        });

        // Save Business Address Details
        $("#businessAddressDetailsForm").submit(function (e) {
            e.preventDefault();
            AddressDetailsMaker("business");
        });

        // Save Billing Address Details
        $("#billingAddressDetailsForm").submit(function (e) {
            e.preventDefault();
            AddressDetailsMaker("billing");
        });

        // Save Shipping Address Details
        $("#shippingAddressDetailsForm").submit(function (e) {
            e.preventDefault();
            AddressDetailsMaker("shipping");
        });

        // Fetch Billing Details
        $.ajax({
            type: "GET",
            url: "/AccountSettings/GetAccountBilling",
            success: function (data) {
                if (data.message == "success") {
                    if (data.result != null) {
                        var billingDetails = data.result[0];
                        $("#billingDetailsBillingId").val(billingDetails.billingAddressId);
                        $("#billingDetailsAccountId").val(billingDetails.accountNumber);
                        $("#billingDetailsId").val(billingDetails.billingId);
