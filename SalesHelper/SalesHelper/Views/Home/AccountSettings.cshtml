            $.ajax({
                type: "POST",
                url: "/AccountSettings/CreateAccountShipping",
                data: formData,
                success: function (data) {
                    if (data.message == "success") {
                        toastr.success('Saved Sccessfully.', 'Success!', { "progressBar": true });
                        setTimeout(function () {
                            window.location.href = "/AccountSettings/ProfileView";
                        }, 3000); // Delay the redirection by 3 seconds (3000 milliseconds)
                    } else {
                        toastr.error(data.result, 'Error!', { "progressBar": true });
                    }
                },
                error: function (error) {
                    toastr.error(error, 'Error!', { "progressBar": true });
                }
            });
