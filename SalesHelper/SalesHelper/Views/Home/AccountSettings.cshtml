        // Fetch Shipping Details
        $.ajax({
            type: "GET",
            url: "/AccountSettings/GetAccountShipping",
            success: function (data) {
                if (data.message == "success") {
                    if (data.result != null) {
                        var shippingDetails = data.result;
                        $("#shippingDetailsShippingId").val(shippingDetails.shippingAddressId);
                        $("#shippingDetailsAccountId").val(shippingDetails.accountNumber);
                        $("#shippingDetailsId").val(shippingDetails.shippingId);
                        $("#companyName_shipping").val(shippingDetails.companyName);
                        $("#contactName_shipping").val(shippingDetails.contactName);
                        $("#shippingMethod").val(shippingDetails.shippingMethod);
                    }
                } else {
                    toastr.error(data.result, 'Error!', { "progressBar": true });
                }
            },
            error: function (error) {
                toastr.error(error, 'Error!', { "progressBar": true });
            }
        });

        // Save Shipping Details
        $("#shippingDetailsForm").submit(function (e) {
            e.preventDefault();

            var shippingDetailsShippingId = $("#shippingDetailsShippingId").val();
            var shippingDetailsAccountId = $("#shippingDetailsAccountId").val();
            var shippingDetailsId = $("#shippingDetailsId").val();
            var companyName_shipping = $("#companyName_shipping").val();
            var contactName_shipping = $("#contactName_shipping").val();
            var shippingMethod = $("#shippingMethod").val();

            var formData = {
                shippingAddressId: shippingDetailsShippingId,
