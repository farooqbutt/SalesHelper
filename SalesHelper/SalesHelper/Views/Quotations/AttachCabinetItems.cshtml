@model SalesHelper.Models.InterfaceModels.CabinetQuotationItems
@inject SalesHelper.Data.ApplicationDbContext context
@{
    var itemsList = context.QuotationItems.Where(a => a.QuotationId == Model.CabinetQuotation.Id).ToList();
    var index = 1;
}

<style>
    .AvatarMedia {
        align-items: center;
    }

    .select2-selection {
        border-radius: 0px !important;
    }

    .form-group > .select2-container--default {
        width: 100%;
        flex: 1 1 auto;
    }

        .form-group > .select2-container--default .select2-selection--single {
            height: 100%;
            line-height: inherit;
            padding: 0.5rem 1rem;
        }
</style>

<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">Cabinet Quotation Detials</h3>
        </div>
    </div>
    <div class="content-body">

        <div class="media p-1 AvatarMedia">
            <div class="media-left pr-1">
                <span class="avatar avatar-online avatar-xl rounded-circle">
                    <img src="/images/portrait/small/avatar-s-1.png" alt="avatar">
                </span>
            </div>
            <div class="media-body media-middle">
                <a class="text-primary" asp-controller="Customers" asp-action="CustomerDetailedView" asp-route-id="@Model.CabinetQuotation.CustomerId">
                    <h5 class="media-heading">@Model.CabinetQuotation.CustomerIdFk.FirstName @Model.CabinetQuotation.CustomerIdFk.LastName</h5>
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-content collapse show">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-10 col-sm-12">
                            <h2 class="card-title mt-0 text-primary"><span><b>Quote #: @Model.CabinetQuotation.Id</b></span></h2>
                            <p class="card-text"><b>Customer Name:</b> @Model.CabinetQuotation.CustomerIdFk.FirstName @Model.CabinetQuotation.CustomerIdFk.LastName</p>
                            <p class="card-text"><b>Qoutation Name:</b> @Model.CabinetQuotation.Name</p>
                            <p class="card-text"><b>Cabinetry:</b> @Model.CabinetQuotation.VendorIdFk.CompanyName</p>
                            <label><b>Select Door Style</b></label>
                            <div class="form-group w-25">
                                <select class="form-control square" id="doorStylesSelect">
                                    <option selected disabled>Select Door Style</option>
                                    @foreach (var item in Model.DoorStylesNames)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-12">
                            <img src="/images/galaxy_imber.jpg" alt="element 01" width="190" class="float-left">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (itemsList.Count > 0)
        {
            <div class="card">
                <div class="card-content">
                    <div id="accordionWrap1" role="tablist" aria-multiselectable="true">
                        <div class="card accordion collapse-icon panel mb-0 box-shadow-0 border-0">

                            <div id="heading12" role="tab" class="card-header card-collapse-border" data-toggle="collapse" href="#accordion12" aria-expanded="false" aria-controls="accordion12">
                                <h4 class="card-title text-primary">
                                    Attached Cabinet Items
                                </h4>
                            </div>
                            <div id="accordion12" role="tabpanel" data-parent="#accordionWrap1" aria-labelledby="heading12" class="collapse" aria-expanded="false">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Qty</th>
                                                    <th>Item</th>
                                                    <th>Description</th>
                                                    <th>Hinge</th>
                                                    <th>Finish</th>
                                                    <th>Price</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in itemsList)
                                                {
                                                    <tr>
                                                        <td>@index</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@item.Item</td>
                                                        <td>@item.Description</td>
                                                        <td>@item.Hinge</td>
                                                        <td>@item.Finish</td>
                                                        <td>@item.Price</td>
                                                        <td>
                                                            <button onclick="DeleteAttachedItem(@item.Id)" class=" btn btn-sm btn-danger"><i class="feather icon-trash" title="Delete Item"></i></button>
                                                        </td>
                                                    </tr>
                                                    index++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="card">
            <div class="card-header d-flex justify-content-between align-content-lg-end">
                <h4 class="card-title text-primary">
                    Attach New Cabinet Items
                </h4>
                <div class="form-group w-25">
                    <select class="form-control square" id="cabinetryItems" data-placeholder="Search Cabinet Items"></select>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="itemTable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Qty</th>
                                    <th>Item</th>
                                    <th>Description</th>
                                    <th>Hinge</th>
                                    <th>Finish</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <div class="form-actions text-center">
                        <button onclick="SaveItems()" class="width-150 btn btn-primary"><i class="fa fa-check-square-o"></i> Save Items</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


<script>

    $(document).ready(function () {
        var cabinetryItems = @Html.Raw(Json.Serialize(Model.CatalogItems));
        var groupedOptions = [];
        var sectionMap = {};
        cabinetryItems.forEach(function (item) {
            var sectionName = item.manufactureSectionName;
            if (!sectionMap[sectionName]) {
                sectionMap[sectionName] = {
                    text: sectionName,
                    children: []
                };
                groupedOptions.push(sectionMap[sectionName]);
            }
            sectionMap[sectionName].children.push({
                id: item.id,
                text: item.itemCode
            });
        });
        $("#cabinetryItems").select2({
            placeholder: $(this).data("placeholder"),
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            data: groupedOptions
        });
        $("#cabinetryItems").val(null).trigger("change");

        // AddRow on changing of cabinetryItems select2
        $("#cabinetryItems").on("change", function () {

            if ($("#doorStylesSelect").val() == null) {
                // if doorstylesselect is null then show alert
                alert("Select Door Style First!");
            } else {
                $.ajax({
                    url: "/Quotations/GetCabinetItem",
                    type: "GET",
                    data: {
                        catalogItemId: $(this).val(),
                        doorStyleName: $("#doorStylesSelect").val()
                    },
                    success: function (data) {
                        addRow(data);
                    },
                    error: function (error) {
                        toastr.error(data.result, 'Error!', { "progressBar": true });
                    }
                });
            }
        });


        function addRow(data) {
            var newRow = `
                                <tr>
                                    <td><b class="item-number"></b></td>
                                    <td class="input-group-sm">
                                        <input type="number" name="Quantity" class="form-control" value="1" placeholder="Qty" />
                                    </td>
                                    <td>
                                        ${data.catalogItemIdFK.itemCode}
                                    </td>
                                    <td class="input-group-sm">
                                        <input type="text" name="Description" class="form-control square" placeholder="Description" />
                                    </td>
                                    <td class="input-group-sm">
                                        <select name="Hinge" class="form-control square">
                                            <option value="N/A">N/A</option>
                                            <option value="Left">Left</option>
                                            <option value="Right">Right</option>
                                        </select>
                                    </td>
                                    <td class="input-group-sm">
                                        <select name="Finish" class="form-control square">
                                            <option value="N/A">N/A</option>
                                            <option value="Left">Left</option>
                                            <option value="Right">Right</option>
                                            <option value="Bottom">Bottom</option>
                                        </select>
                                    </td>
                                    <td class="input-group-sm">
                                        ${data.price.toFixed(2)}
                                    </td>
                                    <td style="vertical-align:middle;">
                                        <button class=" btn btn-sm btn-danger delete-row"><i class="feather icon-trash" title="Delete Item"></i></button>
                                    </td>
                                </tr>
                            `;

            $('#itemTable tbody').append(newRow);

            // Update item numbers
            updateItemNumbers();
        }

        // Function to update price
        function updatePrice() {
            $('#itemTable tbody tr').each(function () {
                var quantity = parseInt($(this).find('input[name^="Items["]').val()) || 0;
                var individualPrice = parseFloat($(this).find('td:eq(6)').text()) || 0; // Assuming the price cell is at index 6

                var totalPrice = quantity * individualPrice;

                // Update the total price cell
                $(this).find('td:eq(7)').text(totalPrice.toFixed(2)); // Assuming the total price cell is at index 7
            });
        }

        // Function to update item numbers
        function updateItemNumbers() {
            $('.item-number').each(function (index) {
                $(this).text(index + 1);
            });
        }

        // Add row when the "Add Item" button is clicked
        $('#addItemBtn').on('click', function () {
            addRow();
        });

        // Remove row when the "Delete Item" button is clicked
        $('#itemTable').on('click', '.delete-row', function () {
            $(this).closest('tr').remove();
            updateItemNumbers();
        });
    });


    function SaveItems() {
        var listOfItems = new Array();
        $("#itemTable").find("tr:gt(0)").each(function () {
            var quantity = $(this).find("td:eq(1)").find("input").val();
            var item = $(this).find("td:eq(2)").text().trim();
            var description = $(this).find("td:eq(3)").find("input").val();
            var hinge = $(this).find("td:eq(4)").find("select").val();
            var finish = $(this).find("td:eq(5)").find("select").val();
            var price = $(this).find("td:eq(6)").text().trim();

            var QuotationItem = {};

            QuotationItem.item = item;
            QuotationItem.description = description;
            QuotationItem.quantity = quantity;
            QuotationItem.hinge = hinge;
            QuotationItem.finish = finish;
            QuotationItem.price = price;
            QuotationItem.quotationId = @Model.CabinetQuotation.Id;

            listOfItems.push(QuotationItem);
        });

        $.ajax({
            url: "/Quotations/AttachCabinetItems",
            type: "POST",
            data: {
                ItemsList: listOfItems
            },
            success: function (data) {
                if (data.message == "success") {
                    toastr.success(data.result, "Success", { "progressBar": true });
                    setTimeout(window.location.reload(), 300);
                } else {
                    toastr.info(data.result, "Information", { "progressBar": true });
                }
            },
            error: function (error) {
                toastr.error(error, 'Error!', { "progressBar": true });
            }
        });
    }

    function DeleteAttachedItem(itemid) {
        if (confirm("Are you sure to delete this item")) {
            $.ajax({
                url: "/Quotations/DeleteAttachedItem",
                type: "POST",
                data: {
                    itemid: itemid
                },
                success: function (data) {
                    toastr.success(data.result, 'Success', { "progressBar": true });
                    setTimeout(window.location.reload(), 300);
                },
                error: function (error) {
                    toastr.error(data.result, 'Error!', { "progressBar": true });
                }
            })
        }
    }

</script>