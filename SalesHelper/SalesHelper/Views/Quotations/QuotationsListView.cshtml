<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title mb-0">All Quotes</h3>
        </div>
        <div class="content-header-right col-md-6 col-12 mb-md-0 mb-2">
            <span class="dropdown">
                <button id="btnQuote" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" 
                        class="btn btn-primary dropdown-menu-right dropdown-toggle btn-md float-right">
                    <i class="fa fa-plus"></i> Add New Quote
                </button>
                <span aria-labelledby="btnQuote" class="dropdown-menu dropdown-menu-right mt-1">
                    <a asp-controller="Quotations" asp-action="CreateCabinetQuotation" class="dropdown-item">Cabinet Quotation</a>
                    <a asp-controller="Quotations" asp-action="CreateCountertopQuotationView" class="dropdown-item">Countertop Quotation</a>
                    <a asp-controller="Quotations" asp-action="" class="dropdown-item">Hardware Quotation</a>
                    <a asp-controller="Quotations" asp-action="" class="dropdown-item">Installation Quotation</a>
                </span>
            </span>
        </div>
    </div>
    <div class="content-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-content collpase show">
                        <div class="card-body card-dashboard">
                            <table id="quotationsList" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Quote #</th>
                                        <th>Quote Name</th>
                                        <th>Customer</th>
                                        <th>Quote Type</th>
                                        <th>Vendor</th>
                                        <th>Date Created</th>
                                        <th>Date Modified</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#quotationsList').DataTable({
            "pageLength": 50,
            "columnDefs": [
                { "orderable": false, "targets": [1,2,3,4,7] }
            ],
            "ajax": {
                "url": "/Quotations/QuotationsList",
                "type": "GET",
                "dataType": "json",
                "dataSrc": "data"
            },
            "columns": [
                {
                    "data": null,
                    "render": function (data, type, row) {
                        if (row.quoteType == "Cabinet") {
                            return `
                                <div class="text-center">
                                    <a href="/Quotations/FullCabinetQuoteView/${row.quotationId.split("-")[1]}"><b>${row.quotationId}</b></a>
                                </div>
                                    `;
                        } else if (row.quoteType == "Countertop") {
                            return `
                                <div class="text-center">
                                        <a href="/Quotations/EditCountertopQuotation/${row.quotationId.split("-")[1]}"><b>${row.quotationId}</b></a>
                                </div>
                                    `;
                        }
                    }
                },
                {
                    "data": "quotationName"
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return `
                                <a href="/Customers/CustomerDetailedView/${row.customer.id}">${row.customer.firstName} ${row.customer.lastName ? row.customer.lastName : ''}</a>
                            `;
                    }
                },
                {
                    "data": "quoteType"
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        if(row.vendor != null) {
                            return `
                                    <a href="/Vendors/EditMyVendor?id=${row.vendor.vendorId}">${row.vendor.companyName}</a>
                                `;
                        }
                        else {
                            return `
                                    N/A
                                `;
                        }
                    }
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return `
                                        ${row.createdDate.split("T")[0]}
                                `;
                    }
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        if(row.modifiedDate != null) {
                            const dateTime = new Date(row.modifiedDate);
                            return `
                                        ${row.modifiedDate.split("T")[0]} -- ${dateTime.getHours()}:${dateTime.getMinutes()}
                                `;
                        }
                        else {
                            return `
                                        N/A
                                `;
                        }
                    }
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        if (row.quoteType == "Cabinet") {
                            return `
                                <div class="text-center">
                                    <span class="dropdown">
                                        <a id="btnSearchDrop4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></a>
                                        <span aria-labelledby="btnSearchDrop4" class="dropdown-menu mt-1" x-placement="bottom-start">
                                            <a href="/Quotations/EditCabinetQuotation/${row.quotationId.split("-")[1]}" class="dropdown-item delete"><i class="feather icon-edit-2"></i>Edit Quote</a>
                                            <a href="#" class="dropdown-item delete"><i class="feather icon-plus-circle primary"></i> Convert to sales</a>
                                            <a href="#" class="dropdown-item"><i class="feather icon-plus-circle primary"></i> Send reminder</a>
                                        </span>
                                    </span>
                                </div>
                                    `;
                        }
                        if (row.quoteType == "Countertop") {
                            return `
                                <div class="text-center">
                                    <span class="dropdown">
                                        <a id="btnSearchDrop4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></a>
                                        <span aria-labelledby="btnSearchDrop4" class="dropdown-menu mt-1" x-placement="bottom-start">
                                            <a href="/Quotations/EditCountertopQuotation/${row.quotationId.split("-")[1]}"" class="dropdown-item delete"><i class="feather icon-edit-2"></i>Edit Quote</a>
                                            <a href="#" class="dropdown-item delete"><i class="feather icon-plus-circle primary"></i> Convert to sales</a>
                                            <a href="#" class="dropdown-item"><i class="feather icon-plus-circle primary"></i> Send reminder</a>
                                        </span>
                                    </span>
                                </div>
                                    `;
                        }
                    }
                },
            ]
        });

        $('#quotationsList').DataTable().order([]).draw();
    });
</script>