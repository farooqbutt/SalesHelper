@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> _signInManager
@model SalesHelper.Models.InterfaceModels.QuotationFullViewInterface

<style>
    .table.table-sm td, .table.table-sm th {
        padding-left: 5px;
        padding-right: 5px;
    }
</style>

<div class="content-wrapper">
    <form asp-controller="Quotations" asp-action="CabinetQuotationDetailedView" method="post" enctype="multipart/form-data">
        @* hidden fields *@
        <div class="hidden">
            <input asp-for="CabinetQuotation.Id" />
            <input asp-for="CabinetQuotation.CustomerId" />
            <input asp-for="CabinetQuotation.Name" />
            <input asp-for="CabinetQuotation.VendorId" />
            <input asp-for="CabinetQuotation.Construction" />
            <input asp-for="CabinetQuotation.BoxMaterials" />
            <input asp-for="CabinetQuotation.isOneColorDesign" />
            <input asp-for="CabinetQuotation.WoodSpeciesForOneColorDesign" />
            <input asp-for="CabinetQuotation.DoorStyleForOneColorDesign" />
            <input asp-for="CabinetQuotation.CabinetFinishForOneColorDesign" />
            <input asp-for="CabinetQuotation.UpperWoodSpeciesForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.UpperDoorStyleForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.UpperFinishForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.LowerWoodSpeciesForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.LowerDoorStyleForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.LowerFinishForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.IslandWoodSpeciesForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.IslandDoorStyleForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.IslandFinishForMultipleColorDesign" />
            <input asp-for="CabinetQuotation.CommentsOnMultiColorDesign" />
            <input asp-for="CabinetQuotation.AdditionalInformation" />
            <input asp-for="CabinetQuotation.CreatedDateTime" />
            <input asp-for="CabinetQuotation.CreatedByUserId" />
            <input asp-for="CabinetQuotation.ModifiedDateTime" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
        </div>

        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title mb-0">Cabinet Quotation Details</h3>
            </div>
        </div>

        <div class="content-detached content-left">
            <div class="content-body">

                <div class="row row-cols-1 row-cols-md-2 match-height">
                    <div class="col">
                        <div class="card" style="height: 320.5px;">
                            <div class="card-content">
                                <div class="card-body">
                                    <h2 class="card-title mt-0 text-primary"><span><b>Quote #: @Model.CabinetQuotation.Id</b></span></h2>
                                    <p class="card-text">
                                        <b>Customer Name:</b>
                                        <a class="text-primary" asp-controller="Customers" asp-action="CustomerDetailedView" asp-route-id="@Model.CabinetQuotation.CustomerId">
                                            @Model.CabinetQuotation.CustomerIdFk.FirstName @Model.CabinetQuotation.CustomerIdFk.LastName
                                        </a>
                                    </p>
                                    <p class="card-text"><b>Quote Name:</b> @Model.CabinetQuotation.Name</p>
                                    <p class="card-text"><b>Cabinetry:</b> @Model.CabinetQuotation.VendorIdFk.CompanyName </p>
                                    <p class="card-text"><b>Construction:</b> @Model.CabinetQuotation.Construction </p>
                                    <p class="card-text"><b>Box Materials:</b> @Model.CabinetQuotation.BoxMaterials </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="card" style="height: 320.5px;">
                            <div class="card-content">
                                <div class="card-body">
                                    <div @(Model.CabinetQuotation.isOneColorDesign == true ? "" : "hidden")>
                                        <h2 class="card-title text-primary mt-0"><span><b>Cabinet Details</b> (One Color)</span></h2>
                                        <p class="card-text"><b>Door Style:</b> @Model.CabinetQuotation.DoorStyleForOneColorDesign </p>
                                        <p class="card-text"><b>Wood Species:</b> @Model.CabinetQuotation.WoodSpeciesForOneColorDesign </p>
                                        <p class="card-text"><b>Cabinet Finish:</b> @Model.CabinetQuotation.CabinetFinishForOneColorDesign </p>
                                    </div>
                                    <div @(Model.CabinetQuotation.isOneColorDesign == false ? "" : "hidden")>
                                        <h2 class="card-title text-primary mt-0"><span><b>Cabinet Details</b> (Multi Color)</span></h2>
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Section</th>
                                                    <th>Wood Species</th>
                                                    <th>Door Style</th>
                                                    <th>Finish</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td class="font-weight-bold">Upper</td>
                                                    <td>@Model.CabinetQuotation.UpperWoodSpeciesForMultipleColorDesign</td>
                                                    <td>@Model.CabinetQuotation.UpperDoorStyleForMultipleColorDesign</td>
                                                    <td>@Model.CabinetQuotation.UpperFinishForMultipleColorDesign</td>
                                                </tr>
                                                <tr>
                                                    <td class="font-weight-bold">Lower</td>
                                                    <td>@Model.CabinetQuotation.LowerWoodSpeciesForMultipleColorDesign</td>
                                                    <td>@Model.CabinetQuotation.LowerDoorStyleForMultipleColorDesign</td>
                                                    <td>@Model.CabinetQuotation.LowerFinishForMultipleColorDesign</td>
                                                </tr>
                                                <tr>
                                                    <td class="font-weight-bold">Island</td>
                                                    <td>@Model.CabinetQuotation.IslandWoodSpeciesForMultipleColorDesign</td>
                                                    <td>@Model.CabinetQuotation.IslandDoorStyleForMultipleColorDesign</td>
                                                    <td>@Model.CabinetQuotation.IslandFinishForMultipleColorDesign</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <p class="card-text"><b>Comments:</b> @Model.CabinetQuotation.CommentsOnMultiColorDesign </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col">
                        <div class="card" style="height: 389.2px;">
                            <div class="card-content">
                                <div class="card-body">
                                    <h2 class="card-title text-primary mt-0"><span><b>Additional Information</b></span></h2>
                                    <p class="card-text"><b>Refrigerator:</b> @Html.Raw(Model.CabinetQuotation.Refrigerator) </p>
                                    <p class="card-text"><b>Stove Or Cooktop:</b> @Html.Raw(Model.CabinetQuotation.StoveAndCooktop) </p>
                                    <p class="card-text"><b>Dishwasher:</b> @Html.Raw(Model.CabinetQuotation.Dishwasher) </p>
                                    <p class="card-text"><b>Hood:</b> @Html.Raw(Model.CabinetQuotation.Hood) </p>
                                    <p class="card-text"><b>Built-in Oven:</b> @Html.Raw(Model.CabinetQuotation.BuiltInOven) </p>
                                    <p class="card-text"><b>Built-in Drawer Microwave:</b> @Html.Raw(Model.CabinetQuotation.BuiltInDrawerMicrowave) </p>
                                    <p class="card-text"><b>Sink:</b> @Html.Raw(Model.CabinetQuotation.Sink) </p>
                                    <p class="card-text"><b>Comments:</b> @Html.Raw(Model.CabinetQuotation.Comments) </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-actions text-center mb-5">
                    <a asp-controller="Quotations" asp-action="EditCabinetQuotation" asp-route-id="@Model.CabinetQuotation.Id" class="width-150 btn btn-primary"><i class="feather icon-arrow-left"></i> Previous</a>
                    <button type="submit" class="width-150 btn btn-primary">Save & Next <i class="feather icon-arrow-right"></i></button>
                </div>
            </div>
        </div>



        <div class="sidebar-detached sidebar-right">
            <div class="sidebar">
                <div class="project-sidebar-content">
                    <div class="card mb-1">
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <h2 class="card-title mt-0 text-primary"><span><b>Quote Price</b></span></h2>
                                <div class="form-body">
                                    <div class="form-group">
                                        <label>Cabinet Price</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input asp-for="CabinetQuotation.CabinetPrice" value="@Model.CabinetQuotation.CabinetPrice" type="number" step="0.01" class="form-control" placeholder="Cabinet Price">
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Delivery Charges</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input asp-for="CabinetQuotation.DeliveryCharge" value="@Model.CabinetQuotation.DeliveryCharge" type="number" step="0.01" class="form-control" placeholder="Delivery Charges">
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Installation Fee</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input asp-for="CabinetQuotation.InstallationFee" value="@Model.CabinetQuotation.InstallationFee" type="number" step="0.01" class="form-control" placeholder="Installation Fee">
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Tax</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input asp-for="CabinetQuotation.Tax" value="@Model.CabinetQuotation.Tax" type="number" step="0.01" class="form-control" placeholder="Tax">
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><b>Vendor Price. Internal use only</b></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input asp-for="CabinetQuotation.VendorPrice" value="@Model.CabinetQuotation.VendorPrice" type="number" step="0.01" class="form-control" placeholder="Vendor Price">
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Comment on price</label>
                                        <textarea asp-for="CabinetQuotation.CommentOnPrice" value="@Model.CabinetQuotation.CommentOnPrice" rows="9" class="form-control square" placeholder="Comments on quotation price"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>